{
  "cli": {
    "version": ">= 16.26.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "node": { "packageManager": "pnpm" }
    },
    "preview": {
      "distribution": "internal",
      "android": { "buildType": "apk" },         // <-- sideloadable
      "node": { "packageManager": "pnpm" }
    },
    "production": {
      "autoIncrement": true,
      "android": { "buildType": "apk" },         // keep apk for sideloads; switch to "aab" for Play
      "node": { "packageManager": "pnpm" }
    }
  },
  "submit": {
    "production": {}
  }
}
